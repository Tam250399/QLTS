@model GiamHongmatModel


<input asp-for="ID" type="hidden" />
<input asp-for="MapId" type="hidden" />
<input asp-for="NgayPhanBo" type="hidden" />
<input asp-for="SoLuongText" type="hidden" />
<table class="table card-table">
    <thead class="thead-light">
        <tr>
            <th >Mã CCDC</th>
            <th >Tên CCDC</th>
            <th >Nhóm CCDC</th>
            <th >Đơn giá</th>
            <th >Số lượng</th>
            <th>Bộ phận sử dụng</th>
            <th>Ngày phân bổ</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.MaCongCuText</td>
            <td>@Model.TenCongCuText</td>
            <td>@Model.NhomCongCuText</td>
            <td>@Model.DonGiaText</td>
            <td>@Model.SoLuongText</td>
            <td>@Model.BoPhanSuDungText</td>
            <td>@Model.NgayPhanBo.toDateVNString()</td>
        </tr>
    </tbody>
</table>

<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left text-required">Ngày lập</label>
    <div class="col-sm-4">
        <nop-editor asp-for="NGAY_LAP" />
        <span asp-validation-for="NGAY_LAP"></span>
    </div>
    <label class="col-form-label col-sm-2 text-sm-left text-required">Số lượng</label>
    <div class="col-sm-4">
        <nop-editor asp-for="SO_LUONG" />
        <span asp-validation-for="SO_LUONG"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Lý do</label>
    <div class="col-sm-10">
        <nop-editor asp-for="LY_DO" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Ghi chú</label>
    <div class="col-sm-10">
        <app-textarea asp-for="GHI_CHU" />
    </div>
</div>
<style>
    th {
        text-align:left !important
    }
</style>

