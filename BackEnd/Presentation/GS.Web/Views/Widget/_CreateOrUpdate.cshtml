@model WidgetModel

<input asp-for="ID" type="hidden" />
<div class="form-group row">
<label class="col-form-label col-sm-2 text-sm-right text-required">Tên widget:</label>
<div class="col-sm-10">
<nop-editor asp-for="TEN" />
<span asp-validation-for="TEN"></span>
</div>
</div>
<div class="form-group row">
<label class="col-form-label col-sm-2 text-sm-right">Cấu hình widget:</label>
<div class="col-sm-10">
<nop-editor asp-for="CAU_HINH" />
<span asp-validation-for="CAU_HINH"></span>
</div>
</div>
<div class="form-group row">
<label class="col-form-label col-sm-2 text-sm-right">Mô tả:</label>
<div class="col-sm-10">
<nop-editor asp-for="MO_TA" />
<span asp-validation-for="MO_TA"></span>
</div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right">Partial view:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="PARTIAL_VIEW_NAME" />
        <span asp-validation-for="MO_TA"></span>
    </div>
</div>

