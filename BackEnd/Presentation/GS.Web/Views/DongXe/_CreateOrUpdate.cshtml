@model DongXeModel

<input asp-for="ID" type="hidden" />
<input asp-for="pageIndex" type="hidden" />
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left text-required">Mã:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="MA" />
        <span asp-validation-for="MA"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left text-required">Tên dòng xe:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TEN" />
        <span asp-validation-for="TEN"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left text-required">Nhãn xe:</label>
    <div class="col-sm-10">
        <nop-select asp-for="NHAN_XE_ID" asp-items="Model.dllNhanXe" asp-filter="true">
            <span asp-validation-for="NHAN_XE_ID"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Mô tả:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="MO_TA" />
        <span asp-validation-for="MO_TA"></span>
    </div>
</div>
