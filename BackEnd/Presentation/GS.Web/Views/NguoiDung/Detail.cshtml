@model NguoiDungModel
@{
    //page title
    ViewBag.Title = "Người dùng";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("NguoiDungDanhSach");
}
<form asp-controller="NguoiDung" asp-action="Detail">
    <div class="card mb-4">
        <h6 class="card-header">
            <b>Xem chi tiết thông tin</b>
            
        </h6>
        <div class="card-body">
            <input asp-for="ID" type="hidden" />
            <div class="content">
                <div class="form-group col-sm-10">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Tên đăng nhập:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.TEN_DANG_NHAP)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Tên đầy đủ:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.TEN_DAY_DU)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Email:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.EMAIL)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Vai Trò:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.SelectedVaiTro)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">số điện thoại:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.MOBILE)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Trạng thái:</label>
                        <div class="label-info form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.Ten_TRANG_THAI)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Ứng dụng:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.UNG_DUNG)
                        </div>
                    </div>
                    <div class="form-group row" >
                        <label class="col-form-label col-sm-2 text-sm-right">Là quản trị:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.IS_QUAN_TRI)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 text-sm-right">Ghi chú:</label>
                        <div class="form-group col-sm-10" style="margin-top: 8px;margin-bottom: 8px;text-align: left;">
                            @Html.DisplayFor(model => model.GHI_CHU)
                        </div>
                    </div>
                </div>


            </div>
            

        </div>
    </div>
</form>