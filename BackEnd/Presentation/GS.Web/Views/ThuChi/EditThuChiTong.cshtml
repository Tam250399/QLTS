<script>
    function CanhBao() {
        bootbox.confirm({
            message: "Thu chi chưa được lưu, bạn có muốn chắc chắn thoát không ?",
            buttons: {
                confirm: {
                    label: '@T("admin.common.yes")',
                },
                cancel: {
                    label: '@T("admin.common.no")',
                },
            },
            callback: function (confirm) {
                if (confirm) {
                    window.location.href = "/ThuChi/List";
                }
                return;
            }
        })
    }
</script>




