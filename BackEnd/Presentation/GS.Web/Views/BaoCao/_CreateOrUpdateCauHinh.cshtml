@model CauHinhBaoCaoModel

<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Tên báo cáo</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TenBaoCao" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Mã báo cáo</label>
    <div class="col-sm-10">
        <input asp-for="MaBaoCao" hidden />
        <input class="form-control text-box single-line" disabled="" value="@Model.MaBaoCao">
    </div>
</div>
<div class="form-group row d-none">
    <label class="col-form-label col-sm-2 text-sm-left">Canh lề trái báo cáo</label>
    <div class="col-sm-4">
        <nop-editor asp-for="MarginLeft" />
    </div>
    <label class="col-form-label col-sm-2 text-sm-left">Canh lề phải báo cáo</label>
    <div class="col-sm-4">
        <nop-editor asp-for="MarginRight" />
    </div>
</div>
<div class="form-group row d-none">
    <label class="col-form-label col-sm-2 text-sm-left">Canh lề trên báo cáo</label>
    <div class="col-sm-4">
        <nop-editor asp-for="MarginTop" />
    </div>
    <label class="col-form-label col-sm-2 text-sm-left">Canh lề dưới báo cáo</label>
    <div class="col-sm-4">
        <nop-editor asp-for="MarginBottom" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Chức danh người lập biểu</label>
    <div class="col-sm-10">
        <nop-editor asp-for="ChucDanhNguoiLapBieu" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Chức danh kế toán trưởng</label>
    <div class="col-sm-10">
        <nop-editor asp-for="ChucDanhKeToanTruong" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Chức danh thủ trưởng đơn vị</label>
    <div class="col-sm-10">
        <nop-editor asp-for="ChucDanhThuTruongDonVi" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Tên người lập biểu</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TenNguoiLapBieu" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Tên kế toán trưởng</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TenKeToanTruong" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Tên thủ trưởng đơn vị</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TenThuTruongDonVi" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Địa danh báo cáo</label>
    <div class="col-sm-10">
        <nop-editor asp-for="DiaDanhBaoCao" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Tên đơn vị khai thác</label>
    <div class="col-sm-10">
        <nop-editor asp-for="DonViKhaiThac" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">SearchModelClass</label>
    <div class="col-sm-10">
        <nop-textarea asp-for="FullName_SearchModelClass" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-left">Excecute Statment</label>
    <div class="col-sm-10">
        <nop-textarea asp-for="ExcecuteStatment" />
    </div>
</div>
