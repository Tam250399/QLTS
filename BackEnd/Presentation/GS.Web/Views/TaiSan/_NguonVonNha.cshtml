@model NguonVonModel

@{
	var _id = Decimal.ToInt32(Model.ID);
}
<div id="TaiSanNguonVonNha_@_id">
	<div class="form-group row">
		<div class="col-md-4">
			<label class="col-form-label"  style="font-style:italic">@Model.TEN</label>
		</div>
		<div class="col-md-8">
			<script>
				console.log(@_id);
			</script>
			<div class="NguonVonNha" data-idnguonvonnha="@_id" data-tennguonvon="@Model.TEN">
				@{
					string _isDisabled = "false";
					if (_id == (int)enumNguonVon.NguonNganSach)
					{
						_isDisabled = "true";
					}
				}
				<nop-editor asp-for="GiaTri" asp-min-number="0" asp-dvt="c" id="NguonVonNha_@_id" asp-disabled="@_isDisabled" />
				<span class="field-validation-valid" data-valmsg-for="NguonVonNha_@_id" data-valmsg-replace="true"></span>
			</div>
		</div>

	</div>
</div>



