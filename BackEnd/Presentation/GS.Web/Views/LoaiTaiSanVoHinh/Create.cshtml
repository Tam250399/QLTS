@model LoaiTaiSanVoHinhModel
@{
    //page title
    ViewBag.Title = "Thêm mới loại tài sản vô hình";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("DanhMucLoaiTaiSanVoHinh");
}
<form asp-controller="LoaiTaiSanVoHinh" asp-action="Create" id="LoaiTaiSanVoHinhForm" method="post">
    <div class="card mb-4">
		<h6 class="card-header">
			Thêm mới
			<small>
				<i class="fa fa-arrow-circle-left"></i>
				<a asp-action="List">Quay lại danh sách</a>
			</small>
			<button type="button" class="btn btn-default btnClose" onclick="window.location.href = '/LoaiTaiSanVoHinh/List';" style="float:right; margin-right: 5px;">
				<i class="ion ion-ios-close-circle-outline"></i>
				Đóng
			</button>
			@*<button type="submit" name="save-continue" class="btn btn-secondary" style="float:right;margin-right:5px;">
			<i class="far fa-save" style="margin-right:5px;"></i>
			Lưu và tiếp tục sửa
		</button>*@
			<button type="submit" name="save" class="btn btn-outline-primary" style="float:right;margin-right:5px; ">
				<i class="fas fa-save" style="margin-right:5px;"></i>
				Lưu
			</button>
		</h6>
        <div class="card-body">
            @await Html.PartialAsync("_CreateOrUpdate", Model)
        </div>
    </div>
</form>
<script>
	var lstForm = $('#LoaiTaiSanVoHinhForm').get(0);
	lstForm.addEventListener('submit', function () {
		showThrobber("Đang thêm mới...");
	});
</script>
