@model QueueProcessModel
@if (Model != null)
{
	<div class="gs-form-group  ">
		<h6>Thông tin tác vụ báo cáo</h6>

		<div class="form-group row">
			<label class="col-form-label col-sm-2">Tên nhiệm vụ</label>
			<label class="col-form-label col-sm-10">Xuất @Model.TenBaoCao</label>
		</div>
		<div class="form-group row">
			<label class="col-form-label col-sm-2">Ngày yêu cầu</label>
			<label class="col-form-label col-sm-10">@Model.NGAY_TAO.toDateVNString()</label>
		</div>
		<div class="form-group row">
			<label class="col-form-label col-sm-2">Trạng thái</label>
			<label class="col-form-label col-sm-10">
				@Model.strTrangThai &nbsp;
				@if (Model.TRANG_THAI_ID == (int)enumTRANG_THAI_QUEUE_BAO_CAO.DA_EXPORT_FILE || Model.TRANG_THAI_ID == (int)enumTRANG_THAI_QUEUE_BAO_CAO.DA_LUU_FILE)
				{
					<text>
						<a class="btn btn-sm btn-outline-secondary btn-download" target="_blank" href="/QueueProcess/Download?guid=@Model.GUID"><i class="fas fa-download d-block"></i></a>
					</text>
				}
			</label>

		</div>
		<div class="form-group row">
			<label class="col-form-label col-sm-2">Loại file xuất</label>
			<label class="col-form-label col-sm-10">@(((enumEXPORT_FILE_TYPE)Model.FILE_TYPE).ToString())</label>
		</div>
		<div class="form-group row">
			<label class="col-form-label col-sm-2">Người tạo</label>
			<label class="col-form-label col-sm-10">@Model.TenNguoiTao</label>
		</div>
	</div>
}
