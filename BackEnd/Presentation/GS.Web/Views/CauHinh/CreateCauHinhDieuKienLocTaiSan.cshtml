@model DieuKienLocTaiSanModel
@{
	//page title
	ViewBag.Title = "Cấu hình báo cáo";
	//active menu item (system name)
	Html.SetActiveMenuItemSystemName("CauHinhThamSoBaoCao");
}
<form asp-controller="CauHinh" asp-action="CreateCauHinhDieuKienLocTaiSan" method="post">
	<div class="card mb-4">
		<h6 class="card-header">
			Thêm mới
			<small>
				<i class="fa fa-arrow-circle-left"></i>
				<a asp-action="ListCauHinhDieuKienLocTaiSan">Quay lại danh sách</a>
			</small>
			<button type="submit" name="save" class="btn btn-success" style="float:right;margin-right:5px; ">
				<i class="fas fa-save" style="margin-right:5px;"></i>
				Lưu
			</button>
		</h6>
		<div class="card-body">
			<div class="form-group row">
				<label class="col-form-label col-sm-2 text-sm-left text-required">Mã điều kiện</label>
				<div class="col-sm-10">
					<nop-editor asp-for="MA_LOC_TAI_SAN" />
					<span asp-validation-for="MA_LOC_TAI_SAN"></span>
				</div>
			</div>
			@await Html.PartialAsync("_CreateOrUpdateCauHinhDieuKienLocTaiSan", Model)
		</div>
	</div>
</form>
