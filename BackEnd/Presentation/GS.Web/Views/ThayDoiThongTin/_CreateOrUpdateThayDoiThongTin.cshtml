            case @((int)GS.Core.Domain.DanhMuc.enumLOAI_HINH_TAI_SAN.DAT):
                _url = "/ThayDoiThongTin/_ThayDoiThongTinTaiSanDat?taiSanId=@Model.TAI_SAN_ID&YeuCauID=@YeuCauID&ngayBienDong=@Model.NGAY_BIEN_DONG";
