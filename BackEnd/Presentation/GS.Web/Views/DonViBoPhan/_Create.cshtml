                    <span asp-validation-for="DIEN_THOAI"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <label class="col-form-label col-sm-4 ">Fax:</label>
                <div class="col-sm-8">
                    <nop-editor asp-for="FAX" id="phongBanFax" />
