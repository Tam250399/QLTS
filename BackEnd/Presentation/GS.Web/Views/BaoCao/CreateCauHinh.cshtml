@model CauHinhBaoCaoModel
@{
    //page title
    ViewBag.Title = "Thiết lập báo cáo";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("CauHinhThamSoBaoCao");
}
<form asp-controller="BaoCao" asp-action="CreateCauHinh" method="post">
    <div class="card mb-4">
        <h6 class="card-header">
            Thêm mới
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="ListCauHinh">Quay lại danh sách</a>
            </small>
            <button type="submit" name="save-continue" class="btn btn-secondary" style="float:right;margin-right:5px;">
                <i class="far fa-save" style="margin-right:5px;"></i>
                Lưu và tiếp tục sửa
            </button>
            <button type="submit" name="save" class="btn btn-success" style="float:right;margin-right:5px; ">
                <i class="fas fa-save" style="margin-right:5px;"></i>
                Lưu
            </button>
        </h6>
        <div class="card-body">
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-sm-left text-required">Mã báo cáo</label>
                <div class="col-sm-10">
                    <nop-editor asp-for="MaBaoCao" />
                    <span asp-validation-for="MaBaoCao"></span>
                </div>
            </div>
            @await Html.PartialAsync("_CreateOrUpdateCauHinh", Model)
        </div>
    </div>
</form>
