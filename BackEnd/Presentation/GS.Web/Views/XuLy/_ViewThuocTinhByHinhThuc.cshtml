@model modelThuocTinh
@using GS.Core.Domain.ThuocTinhs


@if (Model.LoaiDuLieuId == (int)enumLoaiDuLieuCauHinh.OBJ)
{
    <div class="form-group row" style="display:none">
        <label id="NAME_@Model.Ma" class="col-form-label col-sm-12" style="font-weight: bold;">@Model.NAME</label>
        <input class="LoadObject" id="@Model.Ma" value="@Model.GuidParrent" data-guid="@Model.GuidView" data-id="@Model.GUID" hidden />
        <input id="Loai_@Model.Ma" value="@Model.LoaiDuLieuId" hidden />
        <input id="VL_@Model.Ma" value="@Model.VALUE"  data-field="(@Model.FIELD)_@Model.GuidView" hidden />
        <span id="Vali_@Model.Ma" data-value="@Model.IS_VALIDATE" data-id="@Model.Ma" style="display:none;color:red"></span>
    </div>
    foreach (var tt in Model.THUOC_TINH)
    {
        @await Html.PartialAsync("_ViewThuocTinhByHinhThuc", tt)
    }
    <hr style="margin:2px;color:red" />

}
else if (Model.LoaiDuLieuId == (int)enumLoaiDuLieuCauHinh.NB)
{
    <div class="form-group row">
 <input class="LoadObject" id="@Model.Ma" value="@Model.GuidParrent" data-guid="@Model.GuidView" data-id="@Model.GUID" hidden />
        <input id="Loai_@Model.Ma" value="@Model.LoaiDuLieuId" hidden />
        @if (Model.IS_VALIDATE == true)
        {
            <label id="NAME_@Model.Ma" class="col-form-label col-sm-2 text-required">@Model.NAME</label>
            <div class="col-sm-10">
                <nop-editor asp-for="@Model.ValueSo" id="VL_@Model.Ma"  data-field="(@Model.FIELD)_@Model.GuidView" asp-amount="true"/>
            </div>
            <div class="col-sm-2"></div>
            <span class="vali-tt" id="Vali_@Model.Ma" data-value="@Model.IS_VALIDATE" data-id="@Model.Ma" style="display:none;color:red"></span>
        }
        else
        {
            <label id="NAME_@Model.Ma" class="col-form-label col-sm-2">@Model.NAME</label>
            <div class="col-sm-10">
                <nop-editor asp-for="@Model.ValueSo" id="VL_@Model.Ma"  data-field="(@Model.FIELD)_@Model.GuidView" asp-amount="true"/>
            </div>
        }

    </div>
}
