        $.ajax({
            type: "GET",
            url: "/Home/GetVideoHuongDan",
            success: function (data) {
                $.each(JSON.parse(data), function (index, item) {
                    $('#tbody-videohuongdan').append('<tr role="row"><td style = "text-align:center" role = "gridcell" >' + item.NUM + '</td><td style="white-space: nowrap" role="gridcell"><a href="' + item.URL + '" target="_blank">' + item.NAME + ' <i class="fas fa-external-link-alt"></i></a></td></tr>');

                });
            },
