@model QuyenModel

<input asp-for="ID" type="hidden" />
<div class="content">
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-right text-required">Mã quyền:</label>
        <div class="col-sm-10">
            <nop-editor asp-for="MA" />
            <span asp-validation-for="MA"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-right ">Tên quyền:</label>
        <div class="col-sm-10">
            <nop-editor asp-for="TEN" />
            <span asp-validation-for="TEN"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-right">Phân hệ:</label>
        <div class="col-sm-10">
            <nop-editor asp-for="PHAN_HE" />
            <span asp-validation-for="PHAN_HE"></span>
        </div>
    </div>
</div>