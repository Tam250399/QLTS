@model Int32?

@{
    var _idClient = Html.IdForModel();
    var htmlAttributes = new Dictionary<string, object>();
    if (ViewData.ContainsKey("htmlAttributes") && ViewData["htmlAttributes"] != null)
    {
        htmlAttributes = (Dictionary<string, object>)ViewData["htmlAttributes"];
        object _idclientOut;
        if (htmlAttributes.TryGetValue("id", out _idclientOut))
        {
            _idClient = _idclientOut.ToString();
        }
    }
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<input id="@_idClient" name="@_idClient" value="@Model"/>
<script>
    $(document).ready(function() {
        $("#@_idClient").TouchSpin({
            min: @Html.Raw(int.MinValue),
            max: @Html.Raw(int.MaxValue),
            decimals: 0,
            verticalbuttons: true,
            verticalupclass: "ion ion-ios-arrow-up",
            verticaldownclass: "ion ion-ios-arrow-down",
            buttondown_class: "btn",
            buttonup_class: "btn",
            postfix: "@postfix"
        });
    });
</script>