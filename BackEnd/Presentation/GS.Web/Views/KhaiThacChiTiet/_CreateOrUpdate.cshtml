@{
    Layout = null;
}
@model KhaiThacChiTietModel
<div class="gs-form-group mb-4">
    <h6>  </h6>
    <div class="form-group row">
        <input type="hidden" asp-for="ID" id="KHAI_THAC_CHI_TIET_ID" />
        <input type="hidden" asp-for="KHAI_THAC_ID" />
        <label class="col-form-label col-sm-2  text-required">Số quyết định</label>
        <div class="col-sm-4">
            <nop-editor asp-for="khaiThac.QUYET_DINH_SO" asp-disabled="true" />
            <span asp-validation-for="khaiThac.QUYET_DINH_SO"></span>
        </div>

        @*<label class="col-form-label col-sm-2  text-required">Quyết định ngày</label>*@
        <div class="col-sm-4">
            <nop-editor asp-for="khaiThac.QUYET_DINH_NGAY" asp-disabled="true" />
            <span asp-validation-for="khaiThac.QUYET_DINH_NGAY"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 ">Người quyết định</label>
        <div class="col-sm-4">
            <nop-editor asp-for="khaiThac.NGUOI_DUYET" asp-disabled="true" />
            <span asp-validation-for="khaiThac.NGUOI_DUYET"></span>
        </div>
    </div>
    @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID != (int)enumHinhThucKhaiThac.SXKD)
    {
        @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.CHO_THUE_TS)
        {
            <div class="form-group row">
                <label class="col-form-label col-sm-2 text-required">Phương thức cho thuê</label>
                <div class="col-sm-4">
                    <nop-select asp-for="khaiThac.CHO_THUE_PHUONG_THUC_ID" asp-disabled="true" asp-items="Model.khaiThac.PhuongThucChoThueAvaliable" />
                    <span asp-validation-for="khaiThac.CHO_THUE_PHUONG_THUC_ID"></span>
                </div>
            </div>
        }
        @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.LDLK)
        {
            <div class="form-group row">
                <label class="col-form-label col-sm-2 ">Phương thức LDLK</label>
                <div class="col-sm-4">
                    <nop-select asp-disabled="true" asp-for="khaiThac.LDLK_HINH_THUC_ID" asp-items="Model.khaiThac.HinhThucLDLKAvaliable" />
                </div>
            </div>
        }
        <div class="form-group row">
            @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.CHO_THUE_TS)
            {
                <label class="col-form-label col-sm-2 text-required">Số hợp đồng cho thuê</label>

            }
            else
            {
                <label class="col-form-label col-sm-2 text-required">Số hợp đồng</label>
            }
            <div class="col-sm-4">
                <nop-editor asp-disabled="true" asp-for="khaiThac.HOP_DONG_SO" />
                <span asp-validation-for="khaiThac.HOP_DONG_SO"></span>
            </div>
            @*<label class="col-form-label col-sm-2 ">Ngày hợp đồng</label>*@
            <div class="col-sm-4">
                <nop-editor asp-disabled="true" asp-for="khaiThac.HOP_DONG_NGAY" />
                <span asp-validation-for="khaiThac.HOP_DONG_NGAY"></span>
            </div>
        </div>
        <div class="form-group row">
            @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.CHO_THUE_TS)
            {
                <label class="col-form-label col-sm-2 text-required">Đơn vị thuê</label>
            }
            else if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.LDLK)
            {
                <label class="col-form-label col-sm-2 ">Đối tác thực hiện LDLK</label>
            }
            else
            {
                <label class="col-form-label col-sm-2">Đối tác</label>
            }
            <div class="col-sm-4">
                <nop-editor asp-disabled="true" asp-for="khaiThac.DOI_TAC_ID" />
                <span asp-validation-for="khaiThac.DOI_TAC_ID"></span>
            </div>

        </div>
        @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.LDLK)
        {
            <div class="form-group row">
                <label class="col-form-label col-sm-2 ">Tên pháp nhân mới</label>
                <div class="col-sm-4">
                    <nop-editor asp-disabled="true" asp-for="khaiThac.TEN_PHAP_NHAN_MOI" />
                    <span asp-validation-for="khaiThac.TEN_PHAP_NHAN_MOI"></span>
                </div>
            </div>
        }
        <div class="form-group row">
            @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.KHAI_THAC_KHAC)
            {
                <label class="col-form-label col-sm-2 ">Giá trị khai thác</label>
            }
            else
            {
                <label class="col-form-label col-sm-2 ">Giá cho thuê</label>
            }
            <div class="col-sm-4">
                <nop-editor asp-disabled="true" asp-for="khaiThac.CHO_THUE_GIA" asp-min-number="0" placeholder="₫" asp-dvt="c" />
                <span asp-validation-for="khaiThac.CHO_THUE_GIA"></span>
            </div>
        </div>

    }

    <div class="form-group row">
        @if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.CHO_THUE_TS)
        {
            <label class="col-form-label col-sm-2  text-required">Cho thuê từ ngày</label>
        }
        else if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.LDLK)
        {
            <label class="col-form-label col-sm-2  text-required">LDLK từ ngày</label>
        }
        else if (Model.khaiThac.LOAI_HINH_KHAI_THAC_ID == (int)enumHinhThucKhaiThac.SXKD)
        {
            <label class="col-form-label col-sm-2  text-required">SXKD từ ngày</label>
        }
        else
        {
            <label class="col-form-label col-sm-2  text-required">Khai thác từ ngày</label>
        }
        <div class="col-sm-4">
            <nop-editor asp-disabled="true" asp-for="khaiThac.KHAI_THAC_NGAY_TU" />
            <span asp-validation-for="khaiThac.KHAI_THAC_NGAY_TU"></span>
        </div>
        <label class="col-form-label col-sm-2 text-required ">Đến ngày</label>
        <div class="col-sm-4">
            <nop-editor asp-disabled="true" asp-for="khaiThac.KHAI_THAC_NGAY_DEN" />
            <span asp-validation-for="khaiThac.KHAI_THAC_NGAY_DEN"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 ">Nội dung</label>
        <div class="col-sm-10">
            <nop-textarea asp-disabled="true" asp-for="khaiThac.NOI_DUNG" style="width: 100%;height:40px;"></nop-textarea>
            <span asp-validation-for="khaiThac.NOI_DUNG"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2  text-required">Số tiền thu được tạm tính</label>
        <div class="col-sm-4">
            <nop-editor asp-disabled="true" asp-for="khaiThac.SO_TIEN_TAM_TINH" asp-min-number="0" asp-dvt="c" />
            <span asp-validation-for="khaiThac.SO_TIEN_TAM_TINH"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2  text-required">Ngày khai thác</label>
        <div class="col-sm-4">
            <nop-editor asp-for="NGAY_KHAI_THAC" /><br />
            <span asp-validation-for="NGAY_KHAI_THAC"></span>
        </div>
        <label class="col-form-label col-sm-2  text-required">Số tiền thu được</label>
        <div class="col-sm-4">
            <nop-editor asp-for="SO_TIEN_THU_DUOC" />
            <span asp-validation-for="SO_TIEN_THU_DUOC"></span>
        </div>
    </div>
    <div class="form-group row ">
        <label class="col-form-label col-sm-2  ">Ghi chú</label>
        <div class="col-sm-10">
            <nop-textarea asp-for="GHI_CHU" />
        </div>
    </div>
</div>