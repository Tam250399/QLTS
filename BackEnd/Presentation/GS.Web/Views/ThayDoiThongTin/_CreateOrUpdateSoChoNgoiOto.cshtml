                    return '<span class="k-state-default" style="color: red;">'+e.Text+'</span>';
                } else {
                    return '<span class="k-state-default">'+e.Text+'</span>';
                }
            },
            select: function (e) {
                if (e.dataItem.Disabled) {
                    e.preventDefault();
                }
