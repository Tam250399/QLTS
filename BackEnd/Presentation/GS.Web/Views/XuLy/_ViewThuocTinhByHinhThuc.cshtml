    }
    else
    {
        <label id="NAME_@Model.Ma" class="col-form-label col-sm-2 ">@Model.NAME</label>
        <div class="col-sm-10">
            <nop-editor asp-for="@Model.ValueNgayThang" id="VL_@Model.Ma"  />
        </div>
    }
    <script>
        $("#VL_@Model.Ma").change(function () {
            $("#Ngay_@Model.Ma").val($(this).val());
        })
    </script>
</div>
}
else if (Model.LoaiDuLieuId == (int)enumLoaiDuLieuCauHinh.RD)
{
    <div class="form-group row">
        <input class="LoadObject" id="@Model.Ma" value="@Model.GuidParrent" data-guid="@Model.GuidView" data-id="@Model.GUID" hidden />
        <input id="Loai_@Model.Ma" value="@Model.LoaiDuLieuId" hidden />
        @if (Model.IS_VALIDATE == true)
        {
            <label id="NAME_@Model.Ma" class="col-form-label col-sm-2 text-required">@Model.NAME</label>
            @foreach (var itemDDL in Model.OPTION)
            {
                <div class="col-sm-3 col-form-label">
                    <input type="radio" name="VL_@Model.Ma" id="VL_(@itemDDL.Value)_@Model.Ma" value="@itemDDL.Value" checked=@(Model.VALUE==itemDDL.Value?true:false) />&nbsp;@itemDDL.Text
                </div>
            }
            <div class="col-sm-4"></div>
            <div class="col-sm-2"></div>
            <span class="vali-tt" id="Vali_@Model.Ma" data-value="@Model.IS_VALIDATE" data-id="@Model.Ma" style="display:none;color:red"></span>
        }
        else
        {
            <label id="NAME_@Model.Ma" class="col-form-label col-sm-2 ">@Model.NAME</label>
            @foreach (var itemDDL in Model.OPTION)
            {
