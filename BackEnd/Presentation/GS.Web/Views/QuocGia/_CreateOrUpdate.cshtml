@model QuocGiaModel

<input asp-for="ID" type="hidden" />
<input asp-for="pageIndex" type="hidden"/>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right text-required">Mã quốc gia:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="MA" />
        <span asp-validation-for="MA"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right text-required">Tên quốc gia:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TEN" />
        <span asp-validation-for="TEN"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right">Mô tả:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="MO_TA" />
        <span asp-validation-for="MO_TA"></span>
    </div>
</div>
