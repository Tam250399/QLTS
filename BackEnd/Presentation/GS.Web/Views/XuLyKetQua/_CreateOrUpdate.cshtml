@model XuLyKetQuaModel

<input asp-for="ID" type="hidden" />
<input asp-for="XU_LY_ID" type="hidden" />
<input asp-for="NGAY_TAO" type="hidden" />
<input asp-for="NGUOI_TAO_ID" type="hidden" />
<div class="gs-form-group mb-4">
    <h6>Thông tin chung</h6>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-left">Kết quả xử lý</label>
        <div class="col-sm-10">
            <nop-editor asp-for="XuLyTen" asp-disabled="true" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-left text-required">Chứng từ nộp tiền số</label>
        <div class="col-sm-4">
            <nop-editor asp-for="CHUNG_TU_NOP_TIEN_SO" />
            <span asp-validation-for="CHUNG_TU_NOP_TIEN_SO"></span>
        </div>
        <label class="col-form-label col-sm-2 text-sm-left text-required">Chứng từ nộp tiền ngày</label>
        <div class="col-sm-4">
            <nop-editor asp-for="CHUNG_TU_NOP_TIEN_NGAY" />
            <span asp-validation-for="CHUNG_TU_NOP_TIEN_NGAY"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-left text-required">Ngày nộp tiền</label>
        <div class="col-sm-4">
            <nop-editor asp-for="NGAY_NOP_TIEN" />
            <span asp-validation-for="NGAY_NOP_TIEN"></span>
        </div>
        <label class="col-form-label col-sm-2 text-sm-left text-required">Số tiền thu</label>
        <div class="col-sm-4">
            <nop-editor asp-for="SO_TIEN" />
            <span asp-validation-for="SO_TIEN"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-left">Ghi chú</label>
        <div class="col-sm-10">
            <app-textarea asp-for="GHI_CHU" />
        </div>
    </div>
</div>
<div id="listKetQuaTaiSan"></div>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/XuLyKetQua/_ListKetQuaTaiSan?XuLyKetQuaId=@Model.ID&Is_Create=@Model.Is_Create",
            success: function (data) {
                $("#listKetQuaTaiSan").html(data);
            }
        })

    })
    function LoadSoTien(SoTienThem) {
        var sotientong = Number($("#SO_TIEN").val());
        $("#SO_TIEN").data("kendoNumericTextBox").value(sotientong + Number(SoTienThem));
    }
</script>
