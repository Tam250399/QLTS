<div class="gs-form-group mb-4">
    <h6>Thông tin chung</h6>
    <div class="form-group row">
        <label class="col-form-label col-sm-6  " style="padding-left: 20px;">Tên đăng nhập: @Model.TEN_DANG_NHAP</label>
        <label class="col-form-label col-sm-6  " style="padding-left: 20px;">Tên đầy đủ: @Model.TEN_DAY_DU</label>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-6  " style="padding-left: 20px;">email: @Model.EMAIL</label>
        <label class="col-form-label col-sm-6  " style="padding-left: 20px;">Số điện thoại: @Model.MOBILE</label>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <label class="col-form-label col-sm-5  ">Danh sách vị quản lý:</label>
            <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer table-wrapper-scroll-y my-custom-scrollbar">
                <div class="row">
                    <div class="col-md-12" style=" padding-left: 0px; padding-right: 0px;">
                        <table class=" table table-striped table-bordered dataTable no-footer" id="DataTables_Table_1" role="grid" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0" style="text-align: center;" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending">
                                        <b>Mã đơn vị</b>
                                    </th>
                                    <th tabindex="0" style="text-align: center;" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending">
                                        <b>Tên đơn vị</b>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListDonViModel)
                                {
                                    <tr role="row" data-idDonVi="@item.ID">
                                        <td>
                                            @item.MA
                                        </td>
                                        <td>
                                            @item.TEN
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <label class="col-form-label col-sm-5  ">Danh sách vai trò:</label>
            <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer table-wrapper-scroll-y my-custom-scrollbar">
                <div class="row">
                    <div class="col-md-12" style=" padding-left: 0px; padding-right: 0px;">
                        <table class=" table table-striped table-bordered dataTable no-footer" id="DataTables_Table_1" role="grid" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0" style="text-align: center;" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending">
                                        <b>Tên vai trò</b>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListVaiTroIds)
                                {
                                    <tr role="row" data-idDonVi="@item.Value">
                                        <td>
                                            @item.Text
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>