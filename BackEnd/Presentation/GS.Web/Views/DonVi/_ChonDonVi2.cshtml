@model DonViSearchModel

<input asp-for="nguoiDungId" hidden />
<div class="ui-bordered px-4 pt-4 mb-4" >
	<div class="form-group row" style="margin-bottom: 0px !important">
		<div class="col-md-10">
			<div class="form-group row">
				<label class="col-form-label col-sm-2 text-sm-right">Từ khóa</label>
				<div class="col-sm-10">
					<input id="chon-don-vi-KeySearch" class="form-control" style="width:100%" placeholder="Tên/ Mã đơn vị" />
				</div>
			</div>
		</div>
		<div class="col-sm-2">
			<button type="button" class="btn btn-sm btn-primary" id="chon-don-vi-btnSearch">Tìm kiếm</button>
		</div>
	</div>
</div>
<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<div id="Chondonvi-grid"></div>
                    <script>
						$(document).ready(function () {
							function SearchData() {
								var _data = {
									KeySearch: $('#chon-don-vi-KeySearch').val(),
									ischondonvi: true,
									isSelectList: true
								};
								addAntiForgeryToken(_data);
								return _data;
							}
							$("#chon-don-vi-btnSearch").click(function () {
								var grid = $('#Chondonvi-grid').data('kendoGrid');
								grid.dataSource.page(1); //new search. Set page size to 1
								return false;
							});
							$("#chon-don-vi-KeySearch").keydown(function(event) {
								if (event.keyCode === 13) {
									$("#chon-don-vi-btnSearch").click();
									return false;
								}
							});

							$("#Chondonvi-grid").kendoGrid({
								dataSource: {
									type: "json",
									transport: {
										read: {
											url: "@Html.Raw(Url.Action("ListChonDonVi", "DonVi"))",
											type: "POST",
											dataType: "json",
											data: SearchData
										}
									},
									schema: {
										data: "Data",
										total: "Total",
										errors: "Errors"
									},
									error: function(e) {
										display_kendoui_grid_error(e);
										// Cancel the changes
										this.cancelChanges();
									},
									 page:@(Model.Page),
                                    pageSize: 7,
									serverPaging: true,
									serverFiltering: true,
									serverSorting: true
								},
								pageable: {
									refresh: true,
									pageSizes: [@(Model.AvailablePageSizes)],
									@await Html.PartialAsync("_GridPagerMessages")
								},
								editable: {
									//confirmation: "@T("Bạn có chắc chắn xóa không ?")",
									mode: "inline"
								},
								detailInit: detailInit,
								scrollable: false,
								columns:
									[
										{
											field: "MA",
											title: "Mã đơn vị",
											width: 300,
											template: '#=SO_DON_VI_CON>0?MA+" &nbsp;(<span class=\'gs-grid-has-child\' style=\'color: red;\'>"+SO_DON_VI_CON+"</span>)":MA#'
										},
										{
											field: "TEN",
											title: "Tên đơn vị"

										},
										{
										field: "ID",
										title: "Chọn",
										width: 150,
											headerAttributes: {
												style: "text-align:center"
											},
											attributes: {
												style: "text-align:center"
											},
										template: '<a data-id="#=ID#" data-ten="#=TEN#" class="btn btn-sm btn-outline-secondary" href="javascript:void(0);" onclick="SelectDonViQuanLy(this)"><i class="fas fa-pencil-alt d-block"></i>chọn</a>',
									 }
									]
							});
							function detailInit(e) {
								var data = {
									ParentID: e.data.ID,
									TreeLevel: 0,
									//IsSearchSub: true
								};
								addAntiForgeryToken(data);
								$("<div />").appendTo(e.detailCell).kendoGrid({
									dataSource: {
										type: "json",
										transport: {
											read: {
												url: "@Html.Raw(Url.Action("ListChonDonVi", "DonVi"))",
												type: "POST",
												dataType: "json",
												data: data
											}
										},
										schema: {
											data: "Data",
											total: "Total",
											errors: "Errors"
										},
										error: function (e) {
											display_kendoui_grid_error(e);
											// Cancel the changes
											this.cancelChanges();
										},
										page:@(Model.Page),
										pageSize: 7,
										serverPaging: true,
										serverFiltering: true,
										serverSorting: true
									},
									pageable: {
										refresh: true,
										pageSizes: [@(Model.AvailablePageSizes)],
									@await Html.PartialAsync("_GridPagerMessages")
									},
									editable: {
										//confirmation: "@T("Bạn có chắc chắn xóa không ?")",
										mode: "inline"
									},
									detailInit: detailInit,
									scrollable: false,
									columns:
										[
											{
												field: "MA",
												title: "Mã",
												width: 300,
												template: '#=SO_DON_VI_CON>0?MA+" &nbsp;(<span class=\'gs-grid-has-child\' style=\'color: red;\'>"+SO_DON_VI_CON+"</span>)":MA#'
											},
											{
												field: "TEN",
												title: "Tên đơn vị"

											},
											{
												field: "ID",
												title: "Chọn",
												width: 150,
												headerAttributes: {
													style: "text-align:center"
												},
												attributes: {
													style: "text-align:center"
												},
												template: '<a data-id="#=ID#" data-ten="#=TEN#" class="btn btn-sm btn-outline-secondary" href="javascript:void(0);" onclick="SelectDonViQuanLy(this)"><i class="fas fa-pencil-alt d-block"></i>chọn</a>',
											}
										]
								});
							};
						});
                    </script>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	function SelectDonViQuanLy(e) {
		var donviId = $(e).attr("data-id");
		let donviTen = $(e).data("ten");
		$(e).hide();
		@if (Model.isStayInPage) {
			<text>
				let jqDonVi = $('#donviId');
				if (jqDonVi) {
					jqDonVi.val(donviId);
				}
				let jqTenDonVi = $("#TenDonVi");
				if (jqTenDonVi) {
					jqTenDonVi.val(donviTen);
				}
				$("#globalModalIframe .close").click();
				var grid = $('#items-grid').data('kendoGrid');
				if (grid) {
					grid.dataSource.page(1); //new search. Set page size to 1
				}
				//hideThrobber();
				
			</text>
		}
		else {
			<text>
			showThrobber("Đang đổi đơn vị. Xin vui lòng chờ.");
			$.ajax({
			cache: false,
				type: "GET",
				url: "/Donvi/_SelectDonViQuanLy?DonViId=" + donviId,
				success: function (data) {
					$("#globalModalIframe .close").click()
					//HideModalManual();
					hideThrobber();
					location.href = '/AppWork/Index';
					//location.reload();
				}
			});
			</text>
		}
	}
</script>