@model TaiSanKiemKeModel

<input asp-for="ID" type="hidden" />
<input asp-for="DON_VI_ID" type="hidden" />
<div class="gs-form-group mb-4">
    <h6>Thông tin kiểm kê</h6>
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-left">Đơn vị sử dụng</label>
        <div class="col-sm-4">
            <nop-editor asp-for="MaDonVi" asp-disabled="true" />
        </div>
        <div class="col-sm-6">
            <nop-editor asp-for="TenDonVi" asp-disabled="true" />
        </div>
    </div>
    @if (Model.ID > 0)
    {
        <div class="form-group row">
            <label class="col-form-label col-sm-2 text-sm-left text-required">Ngày kiểm kê</label>
            <div class="col-sm-10">
                <nop-editor asp-for="NGAY_KIEM_KE" asp-disabled="true" />
                <span asp-validation-for="NGAY_KIEM_KE"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 text-sm-left">Bộ phận / phòng ban</label>
            <div class="col-sm-10">
                <nop-select asp-for="DON_VI_BO_PHAN_ID" asp-items="Model.DDLDonViBoPhan" asp-filter="true" asp-disabled="true" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 text-sm-left">Đại diện bộ phận/ phòng ban</label>
            <div class="col-sm-10">
                <nop-editor asp-for="DAI_DIEN_BPSD" />
            </div>
        </div>
    }
    else
    {
        <div class="form-group row">
            <label class="col-form-label col-sm-2 text-sm-left text-required">Ngày kiểm kê</label>
            <div class="col-sm-10">
                <nop-editor asp-for="NGAY_KIEM_KE" />
                <span asp-validation-for="NGAY_KIEM_KE"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 text-sm-left">Bộ phận / phòng ban</label>
            <div class="col-sm-10">
                <nop-select asp-for="DON_VI_BO_PHAN_ID" asp-items="Model.DDLDonViBoPhan" asp-filter="true" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 text-sm-left">Đại diện bộ phận/ phòng ban</label>
            <div class="col-sm-10">
                <nop-editor asp-for="DAI_DIEN_BPSD" />
            </div>
        </div>
    }
</div>
