@model ChucDanhModel

<input asp-for="ID" type="hidden" />

<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right text-required">Mã:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="MA_CHUC_DANH" />
        <span asp-validation-for="MA_CHUC_DANH"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right text-required">Tên:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="TEN_CHUC_DANH" />
        <span asp-validation-for="TEN_CHUC_DANH"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right text-required">Khối đơn vị:</label>
    <div class="col-sm-10">
        <nop-select asp-for="KHOI_DON_VI_ID" asp-items="Model.ddlKhoiDonVi" />
        <span asp-validation-for="KHOI_DON_VI_ID"></span>
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right">Định mức:</label>
    <div class="col-sm-10">
        <nop-editor asp-for="DINH_MUC" asp-dvt="c" />
        <span asp-validation-for="DINH_MUC"></span>
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2 text-sm-right">Ghi chú:</label>
    <div class="col-sm-10">
        <nop-textarea asp-for="MO_TA" />
        <span asp-validation-for="MO_TA"></span>
    </div>
</div>