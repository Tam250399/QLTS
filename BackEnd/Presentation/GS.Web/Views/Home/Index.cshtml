    <!-- Content -->
    <div class="authentication-wrapper authentication-2 ui-bg-cover ui-bg-overlay-container px-4" style="background-image: url('/Themes/AppWork/Content/assets/img/bg/blur-26347-27038-hd-wallpapers.jpg');">
        <div class="row ">
            <!-- Logo -->
            <div class="col-md-12">
                <h1 class="text-center"><img src="/Themes/AppWork/Content/assets/img/bg/logo-BTC-removebg.png" alt="Chania"></h1>
            </div>
            <!-- / Logo -->
            <div class="col-md-12">
                <h2 class="text-center textTLE">BỘ TÀI CHÍNH <br> <span>PHẦN MỀM QUẢN LÝ TÀI SẢN CÔNG</span></h2>
            </div>
            <div class="boxlog">
                    <div class="box-login">
                        <form asp-controller="Home" asp-action="Index" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" role="form" class="form-signin">
                            <div class="panel text-center">
                                <h2>Đăng nhập hệ thống</h2>
                            </div>
                            <div id="Login">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon addon"><i class="fas fa-user"></i></span>
                                        <input asp-for="Username" type="text" class="form-control from100" placeholder="Tên đăng nhập" />
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon addon"><i class="fas fa-key"></i></span>
                                        <input asp-for="Password" type="Password" class="form-control from100" placeholder="Mật khẩu" />
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary bo100">Đăng nhập</button>
                                </div>
                                <div class="form-group" style="color:red; text-align:center;padding-top:10px;">
                                    @Html.DisplayFor(t => t.messageResult)
                                </div>
                            </div>
                            
                        </form>
                    </div>
                    
            </div>
        </div>
    </div>
