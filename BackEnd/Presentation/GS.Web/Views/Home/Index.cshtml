            }
            #Login {
                padding: 20px;
            }
            .main-div {
                background: #ffffff none repeat scroll 0 0;
                box-shadow: 1px 2px 4px rgba(0, 0, 0, .5);
                border-radius: 14px;
                border: solid 8px #fff;
                margin-bottom: 10px;
            }
            .box-login {
                border: solid 1px #2673b4;
